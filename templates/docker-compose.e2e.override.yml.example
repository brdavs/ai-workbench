# docker-compose.e2e.override.yml (example)
#
# Usage:
#   docker compose -f docker-compose.yml -f docker-compose.e2e.override.yml run --rm e2e
#
services:
  e2e:
    image: mcr.microsoft.com/playwright:jammy
    working_dir: /workspace
    volumes:
      - ./:/workspace
    environment:
      - CI=true
      - BASE_URL=http://localhost:3000
    shm_size: "1gb"
    command: bash -lc "cd frontend && npm ci && npx playwright test"
